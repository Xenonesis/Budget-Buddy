# =============================================================================
# Budget Buddy - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or any file with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration (Required)
# -----------------------------------------------------------------------------
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# -----------------------------------------------------------------------------
# AI Provider API Keys (Optional - configure at least one for AI features)
# -----------------------------------------------------------------------------
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini - https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=

# Anthropic Claude - https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Mistral AI - https://console.mistral.ai/
MISTRAL_API_KEY=

# Groq - https://console.groq.com/
GROQ_API_KEY=

# Cohere - https://dashboard.cohere.ai/
COHERE_API_KEY=

# DeepSeek - https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# xAI (Grok) - https://x.ai/
XAI_API_KEY=

# Cerebras - https://cloud.cerebras.ai/
CEREBRAS_API_KEY=

# OpenRouter - https://openrouter.ai/
OPENROUTER_API_KEY=

# -----------------------------------------------------------------------------
# Local AI Providers (Optional)
# -----------------------------------------------------------------------------
# Ollama - Local model server URL
OLLAMA_BASE_URL=http://localhost:11434

# LM Studio - Local model server URL  
LM_STUDIO_BASE_URL=http://localhost:1234

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment: development, staging, production
NODE_ENV=development

# Base URL for the application (used for OAuth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_OCR=true
NEXT_PUBLIC_ENABLE_VOICE=true

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=60

# Session timeout in seconds (default: 7 days)
SESSION_TIMEOUT=604800

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# Analytics tracking ID
NEXT_PUBLIC_ANALYTICS_ID=

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------
# Enable debug logging
DEBUG=false

# Skip certain checks in development
SKIP_ENV_VALIDATION=false
